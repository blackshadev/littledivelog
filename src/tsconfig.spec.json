{
    "compilerOptions": {
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": ["es2016", "dom"],
        "outDir": "../out-tsc/spec",
        "module": "es2020",
        "target": "es5",
        "baseUrl": "",
        "types": ["jasmine", "node", "jquery", "bootstrap"],
        "paths": {
            "core-js/es7/reflect": [
                "../node_modules/core-js/proposals/reflect-metadata"
            ],
            "core-js/es6/*": ["../node_modules/core-js/es/*"]
        }
    },
    "files": ["fuse.js.d.ts", "test.ts", "polyfills.ts"],
    "include": ["**/*.spec.ts"]
}
